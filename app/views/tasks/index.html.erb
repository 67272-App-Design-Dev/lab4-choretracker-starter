<h2>Tasks in the system</h2>

<table>
  <tr>
    <th width="120" align="left">Name</th>
    <th width="120" >Points</th>
    <th width="120">Active</th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td align="center"><%= task.points %></td>
    <td align="center"><%= task.active %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
